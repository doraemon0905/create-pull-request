{
  "name": "publish-pull-request",
  "version": "1.1.5",
  "description": "CLI tool to automatically generate pull request descriptions based on Jira tickets and file changes using GitHub Copilot API",
  "main": "lib/index.js",
  "bin": {
    "create-pr": "./bin/create-pr"
  },
  "scripts": {
    "build": "node scripts/build-optimized.js",
    "build:tsc": "tsc",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts --cache --cache-location node_modules/.cache/.eslintcache",
    "test": "jest",
    "setup-env": "node scripts/setup-env.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "version:patch": "./scripts/version.sh patch",
    "version:minor": "./scripts/version.sh minor",
    "version:major": "./scripts/version.sh major",
    "version:prerelease": "./scripts/version.sh prerelease",
    "publish:full": "./scripts/publish.sh",
    "publish:dry": "npm publish --dry-run",
    "validate": "./scripts/pre-publish.sh",
    "preversion": "npm run lint && npm run test",
    "postversion": "echo 'Version updated successfully'"
  },
  "keywords": [
    "cli",
    "pull-request",
    "jira",
    "github",
    "copilot",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.1.1",
    "@octokit/types": "^12.6.0",
    "axios": "^1.5.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
